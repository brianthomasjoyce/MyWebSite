@model MyFirstWebSite.Models.UserChangePasswordModel

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_FullLayout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h2>Change Password</h2>

            @Html.ValidationSummary(true, "Password Change Failed")
            <div id="left">
                <fieldset>
                    <div class="editor-label">@Html.LabelFor(u => u.Password)</div>
                    <div class="editor-field">
                        @Html.TextBoxFor(u => u.Password)
                    </div>
                    <div class="editor-messages">
                        @Html.ValidationMessageFor(u => u.Password)
                    </div>

                    <div class="editor-label">@Html.LabelFor(u => u.NewPassword)</div>
                    <div class="editor-field">
                        @Html.PasswordFor(u => u.NewPassword)
                    </div>
                    <div class="editor-messages">@Html.ValidationMessageFor(u => u.NewPassword)</div>

                    <div class="editor-label">@Html.LabelFor(u => u.ConfirmPassword)</div>
                    <div class="editor-field">
                        @Html.PasswordFor(u => u.ConfirmPassword)
                    </div>
                    <div class="editor-messages">@Html.ValidationMessageFor(u => u.ConfirmPassword)</div>
                    <input type="submit" value="Change Password" class="login" />
                </fieldset>
            </div>
}
